@model IEnumerable<delme.Models.Manufacturer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Manufacturer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MfgDiscount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mfg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MfgDiscount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Mfg">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Mfg">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Mfg">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@ViewBag.Message
